<h1>Burgers!</h1>

<h2>Not yet devoured</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{ burger_name }}   
            <button class="devour-button">Devour!</button><br>
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured!</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
           
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="nb">Burger Name:</label>
    <input type="text" id="nb" name="burger_name">
  </div>

  <button type="submit">Add A Burger</button>
</form>
